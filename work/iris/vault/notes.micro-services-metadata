###################################################################################################

vault write aws/travis-perkins/digital/shared/roles/micro-services-metadata-editor credential_type=iam_user policy_document=-<<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "1",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:ListBucket",
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::micro-services-metadata/*"
      ]
    }
  ]
}
EOF

###################################################################################################

vault policy write aws-travis-perkins-digital-shared_micro-services-metadata-editor -<<EOF
path "aws/travis-perkins/digital/shared/creds/micro-services-metadata-editor" {
  capabilities = [ "read" ]
}
EOF

###################################################################################################

vault write identity/entity name=micro-services-metadata-editor

vault write identity/group name=micro-services-metadata-editors policies=aws-travis-perkins-digital-shared_micro-services-metadata-editor member_entity_ids=$(vault read -format=json /identity/entity/name/micro-services-metadata-editor | jq -r '.data.id')

###################################################################################################

vault write -force auth/approle/role/gitlab-shared-engine-shared01-aws-travisperkins-cloud-digital-micro-services-product

vault write identity/entity-alias name=$(vault read -format=json auth/approle/role/gitlab-shared-engine-shared01-aws-travisperkins-cloud-digital-micro-services-product/role-id | jq -r '.data.role_id') canonical_id=$(vault read -format=json /identity/entity/name/micro-services-metadata-editor | jq -r '.data.id') mount_accessor=$(vault auth list -format=json | jq -r '.[] | select(.type == "approle") | .accessor')

###################################################################################################
