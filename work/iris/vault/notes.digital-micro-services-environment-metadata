###################################################################################################

vault write aws/travis-perkins/digital/shared/roles/digital-micro-services-environment-metadata-editor credential_type=iam_user policy_document=-<<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "1",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:ListBucket",
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::digital-micro-services-environment-metadata/*"
      ]
    }
  ]
}
EOF

vault policy write digital-micro-services-environment-metadata-editor -<<EOF
path "aws/travis-perkins/digital/shared/creds/digital-micro-services-environment-metadata-editor" {
  capabilities = [ "read" ]
}
EOF

vault write -force auth/approle/role/digital-micro-services-environment-metadata-pipeline

vault write identity/entity name=digital-micro-services-environment-metadata-pipeline policies=digital-micro-services-environment-metadata-editor

vault write identity/entity-alias name=$(vault read -format=json auth/approle/role/digital-micro-services-environment-metadata-pipeline/role-id | jq -r '.data.role_id') canonical_id=$(vault read -format=json /identity/entity/name/digital-micro-services-environment-metadata-pipeline | jq -r '.data.id') mount_accessor=$(vault auth list -format=json | jq -r '.[] | select(.type == "approle") | .accessor')

###################################################################################################
###################################################################################################

vault write auth/approle/login role_id=$(vault read -format=json auth/approle/role/digital-micro-services-environment-metadata-pipeline/role-id | jq -r '.data.role_id') secret_id=$(vault write -force -format=json auth/approle/role/digital-micro-services-environment-metadata-pipeline/secret-id | jq -r '.data.secret_id')

vault read aws/travis-perkins/digital/shared/creds/digital-micro-services-environment-metadata-editor

###################################################################################################
