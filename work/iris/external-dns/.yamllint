---
###################################################################################################

extends: default

###################################################################################################

rules:
  braces:
    min-spaces-inside-empty: 1
    max-spaces-inside-empty: 1
  brackets:
    min-spaces-inside: 1
    max-spaces-inside: 1
    min-spaces-inside-empty: 1
    max-spaces-inside-empty: 1
  empty-lines:
    max: 1
  line-length:
    max: 2000
  document-end:
    level: warning
    present: true

###################################################################################################
