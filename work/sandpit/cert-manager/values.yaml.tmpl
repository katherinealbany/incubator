---
###################################################################################################

resources:
  requests:
    cpu: {{.Env.RESOURCE_CPU}}
    memory: {{.Env.RESOURCE_MEMORY}}
  limits:
    cpu: {{.Env.RESOURCE_CPU}}
    memory: {{.Env.RESOURCE_MEMORY}}

###################################################################################################

ingressShim:
  defaultIssuerKind: ClusterIssuer
  defaultIssuerName: cluster-issuer-lets-encrypt-staging

###################################################################################################

podDnsPolicy: None
podDnsConfig:
  nameservers:
    - {{.Env.DNS_NAMESERVER_1}}
    - {{.Env.DNS_NAMESERVER_2}}

###################################################################################################

replicaCount: {{.Env.REPLICA_COUNT}}

###################################################################################################
