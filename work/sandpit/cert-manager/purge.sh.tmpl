#!/bin/bash
[[ -n "${DEBUG}" ]] && set -x

###################################################################################################

BASE="$(dirname "${BASH_SOURCE[0]}")"

###################################################################################################

"${BASE}/uninstall.sh"

###################################################################################################

for item in $(kubectl get customresourcedefinition --output=custom-columns=:.metadata.name | grep '{{ if (has (datasource "data") "CERT_MANAGER_CUSTOM_RESOURCE_DEFINITION_NAME") }}{{ (datasource "data").CERT_MANAGER_CUSTOM_RESOURCE_DEFINITION_NAME }}{{ else }}{{ .Env.CERT_MANAGER_CUSTOM_RESOURCE_DEFINITION_NAME }}{{ end }}'); do
  kubectl delete --wait=true "customresourcedefinition/${item}"
done

###################################################################################################

exit 0

###################################################################################################
