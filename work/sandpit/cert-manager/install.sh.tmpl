#!/bin/bash -e
set -o pipefail
[[ -n "${DEBUG}" ]] && set -x

###################################################################################################

BASE="$(dirname "${BASH_SOURCE[0]}")"

###################################################################################################

helm upgrade '{{.Env.CERT_MANAGER_RELEASE}}' '{{.Env.CERT_MANAGER_REPO}}/{{.Env.CERT_MANAGER_CHART}}' --install --debug --wait --namespace '{{.Env.CERT_MANAGER_NAMESPACE}}' --version '{{.Env.CERT_MANAGER_VERSION}}' --values "${BASE}/values.yaml"

###################################################################################################

kubectl apply --record=true --wait=true --filename="${BASE}/cluster-issuer-lets-encrypt-staging.yaml"
kubectl apply --record=true --wait=true --filename="${BASE}/cluster-issuer-lets-encrypt.yaml"

###################################################################################################
