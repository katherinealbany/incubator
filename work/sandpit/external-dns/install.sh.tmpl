#!/bin/bash -e
set -o pipefail
[[ -n "${DEBUG}" ]] && set -x

###################################################################################################

BASE="$(dirname "${BASH_SOURCE[0]}")"

###################################################################################################

helm upgrade '{{.Env.PUBLIC_RELEASE}}'  '{{.Env.REPO}}/{{.Env.CHART}}' --install --debug --wait --namespace '{{.Env.NAMESPACE}}' --version '{{.Env.VERSION}}' --values "${BASE}/public-values.yaml"  --set txtOwnerId="{{.Env.PUBLIC_RELEASE}}-{{.Env.TXT_OWNER_ID_SALT}}"
helm upgrade '{{.Env.PRIVATE_RELEASE}}' '{{.Env.REPO}}/{{.Env.CHART}}' --install --debug --wait --namespace '{{.Env.NAMESPACE}}' --version '{{.Env.VERSION}}' --values "${BASE}/private-values.yaml" --set txtOwnerId="{{.Env.PRIVATE_RELEASE}}-{{.Env.TXT_OWNER_ID_SALT}}"

###################################################################################################
