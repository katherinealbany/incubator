#!/bin/bash
[[ -n "${DEBUG}" ]] && set -x

###################################################################################################

BASE="$(dirname "${BASH_SOURCE[0]}")"

###################################################################################################

kubectl delete --wait=true --namespace '{{.Env.NAMESPACE}}' service/tiller-deploy
kubectl delete --wait=true --namespace '{{.Env.NAMESPACE}}' deployment/tiller-deploy

###################################################################################################

helm reset --debug

###################################################################################################

kubectl delete --wait=true --filename="${BASE}/cluster-role-binding.yaml"
kubectl delete --wait=true --filename="${BASE}/service-account.yaml"

###################################################################################################

exit 0

###################################################################################################
